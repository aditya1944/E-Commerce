@model IEnumerable<PRFancyMVC.Models.Category>

@{
    ViewBag.Title = "ViewAllCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Category List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.categoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.categoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCategory", new { categoryId = item.categoryId  }) |
            
            @Html.ActionLink("Delete", "DeleteCategory", new { categoryId = item.categoryId })
        </td>
    </tr>
}

</table>
